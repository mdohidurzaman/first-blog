<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj:@category %>
<div class="row">
 <div class="col-md-12">
 <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
   <div class="form-group">
    <div class="control-label col-md-3">
      <%= f.label :name %>
 </div> 
 <div class="col-md-6">
  <%= f.text_field :name, class:"form-control", placeholder: "Category", autofocus: true %>
 </div>
 </div>
  <div class="form-group">
    <div class="col-md-9 col-md-offset-3">
  <%= f.submit class: "btn btn-primary btn-lg" %>  
   </div>
 </div> 

<% end %>
<div class="col-md-4 col-md-offset-4">
[<%= link_to 'Cancel request and return to the article listing', articles_path %>]
 </div>
 </div>
</div>